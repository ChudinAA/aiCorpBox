
# AI Box Configuration - Generated by Ansible
PROJECT_NAME=ai-box
ENVIRONMENT=production

# Ollama Configuration
OLLAMA_MODEL=llama3.2:3b
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_API_BASE=http://ollama:11434

# RAG Service Configuration
RAG_HOST=rag
RAG_PORT=8001
VECTOR_DB_HOST=qdrant
VECTOR_DB_PORT=6333
VECTOR_DB_COLLECTION=documents

# Agents Service Configuration
AGENTS_HOST=agents
AGENTS_PORT=8002

# Gateway Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=5000
GATEWAY_SECRET_KEY={{ ansible_user }}

# Database Configuration (PostgreSQL)
POSTGRES_DB=aibox
POSTGRES_USER=postgres
POSTGRES_PASSWORD={{ vault_postgres_password | default('secure_password') }}
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:{{ vault_postgres_password | default('secure_password') }}@postgres:5432/aibox

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD={{ vault_grafana_password | default('admin123') }}

# Security
API_TOKEN={{ vault_api_token | default('secure-api-token') }}
JWT_SECRET={{ vault_jwt_secret | default('secure-jwt-secret') }}

# Deployment Configuration
REPLICAS=1
CPU_LIMIT=2
MEMORY_LIMIT=4Gi
STORAGE_SIZE=10Gi

# External URLs (for production)
EXTERNAL_DOMAIN={{ inventory_hostname }}
TLS_ENABLED=false

# Service URLs
QDRANT_URL=http://qdrant:6333
