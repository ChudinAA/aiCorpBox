# AI Box Environment Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql://{{ postgres_user }}:{{ postgres_password }}@postgres:{{ postgres_port }}/{{ postgres_db }}
POSTGRES_DB={{ postgres_db }}
POSTGRES_USER={{ postgres_user }}
POSTGRES_PASSWORD={{ postgres_password }}

# Vector Database
QDRANT_URL=http://qdrant:{{ qdrant_port }}

# LLM Service
OLLAMA_URL=http://ollama:{{ ollama_port }}
OLLAMA_MODEL=llama3.2:3b

# API Gateway
GATEWAY_PORT={{ gateway_port }}
GATEWAY_HOST=0.0.0.0

# Monitoring
PROMETHEUS_PORT={{ prometheus_port }}
GRAFANA_PORT={{ grafana_port }}
GRAFANA_ADMIN_PASSWORD={{ grafana_admin_password }}

# Security
SECRET_KEY={{ ansible_date_time.epoch }}{{ inventory_hostname | hash('md5') }}
CORS_ORIGINS=http://localhost:{{ gateway_port }},http://{{ inventory_hostname }}:{{ gateway_port }}

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
WORKER_CONNECTIONS=1000
MAX_REQUESTS=10000
TIMEOUT=300

# AI Box Metadata
AIBOX_VERSION={{ aibox_version }}
DEPLOYED_BY=ansible
DEPLOYED_AT={{ ansible_date_time.iso8601 }}
SERVER_HOST={{ inventory_hostname }}